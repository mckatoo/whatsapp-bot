{
  "name": "whatsapp-bot",
  "version": "0.0.1",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint src --max-warnings=0",
    "test": "jest --bail --findRelatedTests",
    "build": "tsc --declaration",
    "build:watch": "tsc --declaration --watch",
    "dev": "tsnd --transpile-only --respawn --ignore-watch node_modules -r tsconfig-paths/register src/index.ts",
    "start": "node dist/"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "cross-env CI=true npx jest --bail --findRelatedTests"
    ]
  },
  "keywords": [],
  "author": "Milton Carlos Katoo <mckatoo@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/preset-typescript": "^7.10.4",
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@types/jest": "^26.0.13",
    "@typescript-eslint/eslint-plugin": "^4.0.0",
    "@typescript-eslint/parser": "^4.1.0",
    "commitizen": "^4.2.1",
    "cross-env": "^7.0.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.8.1",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.4.2",
    "prettier": "^2.1.1",
    "ts-jest": "^26.3.0",
    "ts-node-dev": "^1.0.0-pre.62",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "@adiwajshing/baileys": "^3.0.0",
    "align-text-line": "^0.0.7",
    "axios": "^0.20.0",
    "dotenv": "^8.2.0",
    "graphql": "^15.3.0",
    "graphql-request": "^3.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
