{
  "name": "whatsapp-bot",
  "version": "0.0.1",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint src --max-warnings=0",
    "test": "jest --bail --findRelatedTests ./src/index.ts",
    "build": "tsc --declaration",
    "build:watch": "tsc --declaration --watch",
    "dev": "tsnd --transpile-only --respawn --ignore-watch node_modules -r tsconfig-paths/register src/index.ts",
    "start": "node dist/",
    "typecheck": "tsc --project tsconfig.json --noEmit"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "cross-env CI=true npx jest --bail --findRelatedTests"
    ]
  },
  "keywords": [],
  "author": "Milton Carlos Katoo <mckatoo@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/preset-typescript": "^7.14.5",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/jest": "^26.0.24",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.3",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.31.0",
    "husky": "^7.0.1",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.1",
    "prettier": "^2.3.2",
    "ts-jest": "^26.5.6",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@adiwajshing/baileys": "^3.5.1",
    "align-text-line": "^0.0.7",
    "axios": "^0.21.1",
    "dotenv": "^10.0.0",
    "graphql": "^15.5.1",
    "graphql-request": "^3.4.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
